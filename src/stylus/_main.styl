    color: $gray2
  }

  &-step {
    position: relative
    margin-right: 20px
    width: 34px
    height: 34px
    border: 2px solid $gray
    border-radius: 50%
    background-color: $gray
    transition: $transition

    &:before {
      content: counter(section)
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      color: $gray2
      transition: $transition
    }

    &:after {
      content: '\e947'
      position: absolute
      left: 50%
      transform: translateX(-50%)
      top: calc(100% + 8px)
      font-family: 'icomoon'
      font-size: 23px
      color: $gray3
      transition: $transition
    }
  }

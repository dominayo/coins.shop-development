#app {
  height: 100%
  overflow: scroll

  &.overflow-y-hidden {
    // overflow: hidden
    // height: auto
  }

  &.open-menu {
    .menu-hamburger {
      position: fixed
      right: 30px

      span {
        background-color: $accent

        &:nth-child(1) {
          left: 50%
          top: 50%
          transform: translate(-50%, -50%) rotate(135deg)
          transition-delay: 0.2s
        }

        &:nth-child(2) {
          transform: scale(0)
          transition-delay: 0.1s
        }

        &:nth-child(3) {
          left: 50%
          top: 50%
          transform: translate(-50%, -50%) rotate(-135deg)
          transition-delay: 0.3s
        }
      }
    }

    .menu {
      left: 0
    }
  }
}


// Style checkbox
.checkbox {
  position: absolute
  z-index: -1
  opacity: 0
  margin: 10px 0 0 20px
}

.checkbox + label {
  display: inline-block
  position: relative
  padding: 0 0 0 79px
  cursor: pointer
  color: $text-color
  line-height: 20px
  height: 40px
}

.checkbox + label:before {
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 64px
  height: 40px
  border-radius: 21px
  background-color: $gray
  transition: $transition
}

.checkbox + label:after {
  content: ''
  position: absolute
  top: 6px
  left: 6px
  width: 28px
  height: 28px
  border-radius: 50%
  box-shadow: 0 5px 10px rgba(81, 81, 104, 0.15)
  background-color: $white
  transition: $transition
}

.checkbox:checked + label:before {
  background-color: $accent
}

.checkbox:checked + label:after {
  left: 30px
}

.radio {
  position: absolute
  z-index: -1
  opacity: 0
  margin: 10px 0 0 7px
}

.radio + label {
  display: inline-block
  position: relative
  padding: 0 0 0 30px
  cursor: pointer
}

.radio + label:before {
  content: ''
  position: absolute
  top: 3px
  left: 0
  width: 12px
  height: 12px
  border: 4px solid #ededf7
  border-radius: 50%
  background: transparent
  transition: $transition
}

.radio:checked + label:before {
  border-color: $accent
}


        padding-right: 12px

        &:after {
          content: '\e90b'
          position: absolute
          top: 50%
          right: 0
          transform: translateY(-50%)
          font-size: 5px
          color: $gray2
          font-family: 'icomoon'
        }
      }
    }

    &_up {
      span {
        position: relative
        padding-right: 12px

        &:after {
          content: '\e90b'
          position: absolute
          top: 50%
          right: 0
          transform: translateY(-50%) rotate(0.5turn)
          font-size: 5px
          color: $gray2
          font-family: 'icomoon'
        }
      }
    }


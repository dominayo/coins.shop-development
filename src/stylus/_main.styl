.btn {
  display: inline-flex
  align-items: center
  justify-content: center
  text-align: center
  min-width: 165px
  height: 50px
  padding: 0 15px
  border: 0
  border-radius: 15px
  font-family: $default-fonts
  font-size: 13px
  font-weight: 700
  letter-spacing: 1px
  text-transform: uppercase
  background-color: $accent
  color: $white
  transition: $transition
  will-change: transform

  &:hover {
    transform: translateY(-5px)
    background-color: $accent3
    box-shadow: 0 10px 25px rgba($accent, 0.4)
  }

  &:active {
    transform: translateY(0px)
    background-color: $accent4
    box-shadow: 0 3px 5px rgba($accent, 0.4)
  }

  &.disabled {
    pointer-events: none
    background-color: $gray4
    color: $white

    &:hover {
      transform: none
      box-shadow: none
    }
  }

  &_flex {
    align-items: center

    span {
      &.btn-icon {
        margin-right: 4px
        width: 100%
        height: 100%
        background: url('../img/main/metamask-logo-horizontal.svg') center no-repeat
        background-size: contain
      }

      // &.btn-icon {
      // margin-right 4px
      // width 25px
      // height 25px;
      // background url(../img/main/fox.png) center no-repeat;
      // background-size contain
      // }
      &.icon-pluse {
        display: flex
        align-items: center
        justify-content: center
        font-size: 14px
        margin-right: 10px
        width: 30px
        height: 30px
        padding-left: 3px
        color: #fff
        border-radius: 5px
        background-color: $accent2
      }

      &.icon-file_download {
        margin-left: 10px
        font-size: 25px

        &:before {
          transition: $transition
        }
      }

      &.check {
        position: relative
        margin-right: 13px
        width: 20px
        height: 20px
        border-radius: 50%
        border: 2px solid $accent
        transition: $transition

        &:after {
          content: '\e945'
          position: absolute
          opacity: 0
          left: 50%
          top: 50%
          transform: translate(-50%, -50%)
          font-family: 'icomoon'
          font-size: 7px
          color: $accent
          transition: $transition
        }
      }
    }

    &:hover {
      span {
        &.icon-file_download {
          &:before {
            color: #fff
          }
        }
      }
    }
  }

  &_meta {
    min-width: 157px
    background-color: $pink
    color: #ee8a13

    &:hover {
      background-color: lighten($pink, 10%)
      box-shadow: 0 10px 25px rgba(#ee8a13, 0.4)
    }
  }

  &_pluse {
    .icon-pluse {
      transition: $transition
    }

    &:hover {
      .icon-pluse {
        background-color: $accent3
      }
    }
  }

  &_border {
    background-color: $white
    border: 2px solid $accent
    color: $accent

    &:hover {
      color: #fff
      background-color: $accent
    }
  }

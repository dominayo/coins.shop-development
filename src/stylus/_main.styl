        padding: 15px 0 14px
        line-height: 25px
        border-bottom: 1px solid $gray3
      }

      &_head {
        margin-bottom: 5px
        color: $gray2
      }

      &:last-child {
        border-bottom: none
      }
    }

    &__cont {
      overflow: hidden auto
      height: 274px
    }

    &_1 {
      .refferrals-td {
        &:nth-child(1) {
          width: 32%
        }

        &:nth-child(2) {
          width: 27%
        }

        &:nth-child(3) {
          width: 36%
        }

        &:nth-child(4) {
          width: 5%
        }
      }
    }


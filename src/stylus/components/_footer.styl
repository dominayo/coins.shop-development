.footer {
	padding 70px 0;
  background-color $gray;
	&-wrap {
		display flex
	}
	&__column {
		&:nth-child(1) {
			width 238px
			margin-right 8.3%
		}
		&:nth-child(2) {
			padding-top 6px
			width 206px
			margin-right 9.1%	
		}
		&:nth-child(3) {
			padding-top 6px
			width 245px
			margin-right 8.2%
		}
		&_pt {
			padding-top 58px
		}
		.btn {
			min-width: 175px;
		}
	}
	.logo {
		margin-bottom 40px
	}
	p {
		color $gray2
	}
	&__text {
		p {
			margin-bottom 20px
			&:last-child {
				margin-bottom 0
			}
		}
	}
	&__list {
		&_mb {
			margin-bottom 33px
		}
	}
	h6 {
		margin-bottom 32px
		padding-left 34px
	}
	&__item {
		display flex
		align-items flex-start
		margin-bottom 32px
		&:last-child {
			margin-bottom 0
		}
	}
	&-soc {
		&__list {
			display flex
			padding-left 35px
		}
		&__item {
			margin-right 15px
			&:last-child {
				margin-right 0
			}
		}
		&__link {
			display flex
			align-items center
			justify-content center
			width 44px
			height 44px
			background-color $white
			border-radius 50%
			&:hover {
				box-shadow: 0 4px 10px rgba($black, .2);
			}
		}
	}
	&-mob {
		&__top {
			display flex 
			justify-content space-between
			margin-bottom 30px
			.logo {
				margin-bottom 0
			}
			.footer-soc__list {
				padding-left: 0
			}
		}
	}
}
.points {
	&-icon {
		width 22px
		margin-right 15px
	}
	&-main {
		margin-bottom 10px
		font-weight 500
		font-size 17px
		color $black2
		a {
			color $black2
			&:hover {
				color $accent
			}
		}
	}
}